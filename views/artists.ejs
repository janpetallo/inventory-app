<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link rel="stylesheet" href="/style.css">
  </head>
  <body class="has-fab">
    <!-- Navigation Bar -->
    <%- include('components/navbar', { currentPage: 'artists' }) %>

    <!-- Main Content -->
    <main class="main-content">
      <h1><%= title %></h1>
      
      <% if (typeof artists !== 'undefined' && artists.length > 0) { %>
        <div class="artist-list">
          <% artists.forEach(function(artist) { %>
            <div class="artist-item">
              <a href="/artists/<%= artist.name %>/<%= artist.id %>"><%= artist.name %></a>
            </div>
          <% }); %>
        </div>
      <% } else { %>
        <div class="empty-state">
          <p>No artists found.</p>
          <p>Add some artists to your vinyl collection!</p>
        </div>
      <% } %>
    </main>
    
    <!-- Floating Action Button -->
    <a href="/artists/new" class="fab">
      <i class="fas fa-plus btn-icon"></i>Add Artist
    </a>
  </body>
</html>
